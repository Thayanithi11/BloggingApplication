<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head')%>
    <title>HomePage</title>
</head>
<body>
   <%-include('./partials/nav')%>
   <div class="container mt-3">
    <div class="row row-cols-3">
     <% blogs.forEach((blog) => { %>
         <div class="card" style="width: 18rem; margin:10px;">
          <img src="<%= blog.coverImageURL %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <h6 style="font-weight:200;">Blog by: <%= blog.createdBy.fullName %></h6>
            <div class="button-cntnr" style="display: flex;align-items: center;justify-content:flex-start; gap:20px;">
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
                <a href="/blog/edit/<%= blog._id %>" class="btn btn-warning">Edit</a>
                <a href="/blog/delete/<%= blog._id %>" class="btn btn-danger">Delete</a>
            </div>
          </div>
        </div>    
     <% }) %>
    </div>
   </div>
   <%-include('./partials/scripts')%>
</body>
</html>